<p id="notice"><%= notice %></p>
<div>
  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <!-- place we might put put pictures -->

    <%= image_tag @product.pic, class: "profile-pic" %>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.formatted_price %>
  </p>
</div>
<form action="" method="GET">
  <script
    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="pk_0DUOXU6bGnHcE9pdeAVcWzEUBgrmj"
    data-amount="<%= @product.price_in_cents%>"
    data-name="cO(n)go"
    data-description="<%= @product.name %> (<%= @product.formatted_price%>)"
    data-image="/128x128.png">
  </script>
</form>

<div id="reviews-list">
  <h3>Reviews</h3>
	<% @product.reviews.each do |review| %>
		  <p>
			<%= review.comment %>
			<br>
			Added: <%= time_ago_in_words review.created_at %> ago
		</p>

	<% end %>
</div>

	<h3>Add Review</h3>
	<%= render 'reviews/form' %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
